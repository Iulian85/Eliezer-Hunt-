
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // SECURITY 6.0: Blocăm citirea publică. 
      // Permitem citirea doar dacă documentul aparține utilizatorului curent.
      // Notă: userId în DB este ID-ul Telegram.
      allow read: if request.auth != null && request.auth.uid == userId; 
      allow update: if false;
      allow create: if request.resource.data.balance == 0;
    }
    
    match /claims/{claimId} {
      allow create: if request.resource.data.status == "pending_verification";
      allow read, update, delete: if false;
    }

    match /ad_claims/{claimId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /referral_claims/{claimId} {
      allow create: if request.resource.data.status == "pending_proof_of_play";
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if request.resource.data.status == "pending_review";
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write: if false;
    }

    match /hotspots/{hId} {
      allow get: if true;
      allow list: if false;
    }
  }
}
