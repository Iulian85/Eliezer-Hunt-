rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read: if true; 
      allow create: if true;
      // SECURITATE: Permitem update doar pentru câmpuri de profil, NU pentru balanțe
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['photoUrl', 'username', 'lastActive', 'deviceFingerprint', 'lastInitData', 'walletAddress', 'biometricEnabled']);
      allow delete: if false;
    }
    
    match /claims/{claimId} {
      allow create: if true; // Userul depune cererea, serverul o procesează
      allow read, update, delete: if false;
    }

    match /referral_claims/{claimId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write: if false; 
    }

    match /hotspots/{hId} {
      allow get, list: if true;
      allow write: if false;
    }
  }
}