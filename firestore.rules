
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funcție de ajutor pentru a verifica dacă se încearcă modificarea câmpurilor protejate
    function isChangingProtectedFields() {
      return request.resource.data.balance != resource.data.balance ||
             request.resource.data.tonBalance != resource.data.tonBalance ||
             request.resource.data.isBanned != resource.data.isBanned ||
             request.resource.data.referrals != resource.data.referrals ||
             request.resource.data.deviceFingerprint != resource.data.deviceFingerprint;
    }

    match /users/{userId} {
      allow read: if true;
      
      // Utilizatorul poate crea profilul inițial (doar dacă are balanță 0)
      allow create: if request.resource.data.balance == 0 
                    && request.resource.data.tonBalance == 0;
      
      // Utilizatorul poate actualiza DOAR câmpurile de profil, NU și balanța
      allow update: if request.auth == null // În Mini App nu avem Firebase Auth implicit
                    && !isChangingProtectedFields()
                    && (request.resource.data.lastActive >= resource.data.lastActive);
                    
      allow delete: if false;
    }
    
    match /claims/{claimId} {
      // Permitem doar crearea de cereri noi. 
      // Odată create, nu mai pot fi modificate sau șterse de utilizator.
      allow create: if request.resource.data.status == "pending_verification";
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if request.resource.data.status == "pending_review";
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
    
    match /hotspots/{hId} {
      allow read: if true;
      allow write: if false; // Doar Admin via Dashboard (care folosește o altă metodă sau Admin SDK)
    }
  }
}