
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Utilizatorii pot citi doar profilul lor (sau alții pentru leaderboard)
    // Dar NU pot face update direct pe câmpuri sensibile (balanță, ban, etc.)
    match /users/{userId} {
      allow read: if true;
      allow create: if true; 
      allow update: if false; // Toate update-urile trec prin Cloud Functions
      allow delete: if false;
    }
    
    // Cererile de colectare: clientul poate doar să creeze, nu să citească/modifice
    match /claims/{claimId} {
      allow create: if request.auth == null; // Permitem crearea inițială (verificată în Functions)
      allow read, update, delete: if false;
    }

    match /ad_claims/{claimId} {
      allow create: if true;
      allow read: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if true;
      allow read: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write: if false; // Doar Admin via Functions/Console
    }

    match /hotspots/{hId} {
      allow get, list: if true;
      allow write: if false;
    }
  }
}
