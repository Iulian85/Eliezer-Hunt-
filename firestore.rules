
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /used_nonces/{nonceId} {
      allow read: if false;
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if true; 
      allow create: if request.resource.data.balance == 0 
                    && request.resource.data.isBanned == false
                    && request.resource.data.deviceFingerprint != null;
      
      // IMPORTANT: Utilizatorul NU poate face update la nimic (inclusiv fingerprint)
      // Balanța și setările de securitate se modifică DOAR prin Cloud Functions (Admin SDK)
      allow update: if false; 

      match /security_logs/{logId} {
        allow read, write: if false;
      }
    }
    
    match /claims/{claimId} {
      allow create: if request.resource.data.status == "pending_verification"
                    && request.resource.data.fingerprint != null;
      allow read, update, delete: if false;
    }

    match /ad_claims/{claimId} {
      allow create: if request.resource.data.fingerprint != null;
      allow read, update, delete: if false;
    }

    match /referral_claims/{claimId} {
      allow create: if request.resource.data.status == "pending_proof_of_play";
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if request.resource.data.status == "pending_review";
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write: if false;
    }

    match /hotspots/{hId} {
      allow get: if true;
      allow list: if false;
    }
  }
}
