
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /used_nonces/{nonceId} {
      allow read: if false;
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if true; 
      allow create: if true;
      // Am activat update-ul pentru ca balanța să se poată schimba din aplicație
      allow update: if true; 

      match /security_logs/{logId} {
        allow read, write: if false;
      }
    }
    
    match /claims/{claimId} {
      allow create: if true;
      allow read, update, delete: if true;
    }

    match /ad_claims/{claimId} {
      allow create: if true;
      allow read, update, delete: if true;
    }

    match /referral_claims/{claimId} {
      allow create: if true;
      allow read, update, delete: if true;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write: if false;
    }

    match /hotspots/{hId} {
      allow get: if true;
      allow list: if false;
    }
  }
}