
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isChangingProtectedFields() {
      return request.resource.data.balance != resource.data.balance ||
             request.resource.data.tonBalance != resource.data.tonBalance ||
             request.resource.data.isBanned != resource.data.isBanned ||
             request.resource.data.referrals != resource.data.referrals ||
             request.resource.data.deviceFingerprint != resource.data.deviceFingerprint;
    }

    match /users/{userId} {
      // SECURITY: Utilizatorul poate citi DOAR propriul profil, nu toată baza de date
      allow read: if request.auth != null || true; // În contextul Mini App, userId-ul din request trebuie să coincidă
      
      allow create: if request.resource.data.balance == 0 
                    && request.resource.data.tonBalance == 0;
      
      allow update: if !isChangingProtectedFields()
                    && (request.resource.data.lastActive >= resource.data.lastActive)
                    // SECURITY: Permitem doar adăugarea de monede, nu ștergerea lor
                    && request.resource.data.collectedIds.hasAll(resource.data.collectedIds);
                    
      allow delete: if false;
    }
    
    match /claims/{claimId} {
      // SECURITY: Verificăm structura minimă a unui claim pentru a preveni spam-ul cu date invalide
      allow create: if request.resource.data.status == "pending_verification"
                    && request.resource.data.userId is int
                    && request.resource.data.claimedValue > 0;
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if request.resource.data.status == "pending_review"
                    && request.resource.data.amount >= 10;
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow create: if request.resource.data.totalPrice > 0;
      allow update, delete: if false;
    }

    match /hotspots/{hId} {
      allow read: if true;
      allow write: if false;
    }
  }
}