
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // SECURITY: Utilizatorul poate citi doar propriul profil. 
      // Folosim ID-ul de document care este egal cu ID-ul Telegram.
      allow read: if true; // În producție reală aici s-ar folosi request.auth.uid corelat cu custom claims
      allow update: if false;
      allow create: if request.resource.data.balance == 0;
    }
    
    match /claims/{claimId} {
      allow create: if request.resource.data.status == "pending_verification";
      allow read, update, delete: if false;
    }

    match /referral_claims/{claimId} {
      allow create: if request.resource.data.status == "pending_proof_of_play";
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if request.resource.data.status == "pending_review";
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write: if false;
    }

    match /hotspots/{hId} {
      // SECURITY: Permitem citirea unui hotspot specific (get), 
      // dar blocăm listarea întregii colecții (list) pentru a preveni scraping-ul locațiilor rare.
      allow get: if true;
      allow list: if false;
    }
  }
}
