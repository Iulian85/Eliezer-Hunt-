
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read: if true; 
      allow create: if true;
      allow update: if false; // SECURITATE: Balanța poate fi schimbată DOAR de Cloud Functions
      allow delete: if false;
    }
    
    match /claims/{claimId} {
      allow create: if true; // Permitem crearea, dar statusul rămâne 'pending' până verifică serverul
      allow read, update, delete: if false;
    }

    match /withdrawal_requests/{reqId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    match /campaigns/{campId} {
      allow read: if true;
      allow write, delete: if false; 
    }

    match /hotspots/{hId} {
      allow get, list: if true;
      allow write, delete: if false;
    }
  }
}